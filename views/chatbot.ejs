<!-- Chatbot UI -->
<div id="chatbot-container">
  <div id="chatbot-header">LinkBoard Assistant</div>
  <div id="chatbot-messages"></div>
  <div id="chatbot-input">
    <input type="text" id="chat-input" placeholder="Ask me something..." />
    <button onclick="sendMessage()">Send</button>
  </div>
</div>

<style>
  #chatbot-container {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 300px;
    background: white;
    border: 2px solid #007BFF;
    border-radius: 10px;
    font-family: sans-serif;
    box-shadow: 0 0 10px rgba(0,0,0,0.3);
  }

  #chatbot-header {
    background-color: #007BFF;
    color: white;
    padding: 10px;
    font-weight: bold;
    border-radius: 10px 10px 0 0;
  }

  #chatbot-messages {
    height: 200px;
    overflow-y: auto;
    padding: 10px;
    font-size: 14px;
  }

  #chatbot-input {
    display: flex;
    border-top: 1px solid #ddd;
  }

  #chat-input {
    flex: 1;
    padding: 8px;
    border: none;
    outline: none;
  }

  #chatbot-input button {
    background: #007BFF;
    color: white;
    border: none;
    padding: 8px 12px;
    cursor: pointer;
  }
</style>

<script>
  function sendMessage() {
    const input = document.getElementById('chat-input');
    const message = input.value.trim();
    if (!message) return;

    const container = document.getElementById('chatbot-messages');
    container.innerHTML += `<div><strong>You:</strong> ${message}</div>`;

    const botReply = getBotReply(message);
    container.innerHTML += `<div><strong>Bot:</strong> ${botReply}</div>`;

    input.value = "";
    container.scrollTop = container.scrollHeight;
  }

  function getBotReply(msg) {
    msg = msg.toLowerCase();

    if (msg.includes("signup") || msg.includes("register")) {
      return "To sign up, go to the signup page and enter your email and password.";
    } else if (msg.includes("login") || msg.includes("signin")) {
      return "To login, use your email and password on the login page.";
    } else if (msg.includes("linkboard")) {
      return "LinkBoard is a video conferencing and messaging application.";
    } else if (msg.includes("logout")) {
      return "Click on the logout button at the top right to end your session.";
    } else {
      return "I'm here to help with LinkBoard! Ask about signup, login, or features.";
    }
  }
</script>
